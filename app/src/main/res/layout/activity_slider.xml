<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar" />
        </LinearLayout>

        <FrameLayout
            android:id="@+id/container_body"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
<FrameLayout
    android:id="@+id/frame_layout"
    android:layout_weight="1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


            <ImageView
                android:id="@+id/shakeit"
                android:layout_width="@dimen/_60ROR"
                android:layout_height="@dimen/_60ROR"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/_10ROR"
                android:src="@drawable/shake_it" />

            <ImageView
                android:id="@+id/animspindo"
                android:layout_width="@dimen/_50ROR"
                android:layout_height="@dimen/_50ROR"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/img1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_40ROR"
                android:layout_marginTop="@dimen/_260ROR"
                android:src="@drawable/spindo_hanging_3" />

            <ImageView
                android:id="@+id/img3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_80ROR"
                android:layout_marginTop="@dimen/_272ROR"
                android:src="@drawable/spindo_hanging_5" />

            <ImageView
                android:id="@+id/img5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_130ROR"
                android:layout_marginTop="@dimen/_303ROR"
                android:src="@drawable/spindo_hanging_2" />


            <ImageView
                android:id="@+id/img2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_210ROR"
                android:layout_marginTop="@dimen/_280ROR"
                android:src="@drawable/spindo_hanging_4" />


            <ImageView
                android:id="@+id/img4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_240ROR"
                android:layout_marginTop="@dimen/_302ROR"
                android:src="@drawable/spindo_hanging_1" />
            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50ROR"
                android:layout_gravity="bottom"
                android:gravity="center_vertical"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/spindo"
                    android:layout_width="@dimen/_40ROR"
                    android:layout_height="@dimen/_40ROR"
                    android:layout_marginBottom="@dimen/_5ROR"
                    android:src="@drawable/spindobig" />

                <TextView
                    android:id="@+id/info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20ROR"
                    android:layout_marginLeft="@dimen/_5ROR"
                    android:background="@drawable/round_rect"
                    android:gravity="center"
                    android:text="@string/spindo_text"
                    android:textColor="@color/textcolor"
                    android:textSize="@dimen/small"
                    android:typeface="sans" />


                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_45ROR"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="@dimen/_5ROR"
                    android:layout_marginRight="@dimen/_5ROR"
                    android:background="#00000000"
                    android:clickable="true"
                    android:src="@drawable/plus"
                    app:borderWidth="0dp"
                    app:elevation="6dp"
                    app:pressedTranslationZ="12dp"

                    />

            </LinearLayout>
</FrameLayout>
            <RelativeLayout
                android:id="@+id/layout0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:visibility="invisible"
                >


<RelativeLayout
    android:id="@+id/layout1"
    android:visibility="invisible"
    android:layout_marginTop="@dimen/_30ROR"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/layout"
                    android:background="@android:color/white"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150ROR">


                    <RelativeLayout
                        android:id="@+id/main"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_150ROR"
                        android:layout_above="@+id/relativeLayout"
                        android:layout_marginBottom="@dimen/_10ROR"
                        android:layout_marginLeft="@dimen/_10ROR"
                        android:layout_marginRight="@dimen/_10ROR">

                        <ImageView
                            android:id="@+id/image"
                            android:layout_width="@dimen/_100ROR"
                            android:layout_height="110dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true" />

                        <RelativeLayout
                            android:id="@+id/relativeLayout2"
                            android:layout_width="@dimen/_60ROR"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true">

                            <TextView
                                android:id="@+id/expirydate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:textColor="@color/voucher_color"
                                android:textSize="@dimen/_10ROR"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/expirydate"
                                android:layout_centerHorizontal="true"
                                android:text=""
                                android:textColor="@color/voucher_color"
                                android:textSize="@dimen/_10ROR" />

                            <TextView
                                android:id="@+id/offer_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:text=""
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:textColor="@color/voucher_color"
                                android:textSize="@dimen/_23ROR" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/description"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/_5ROR"
                            android:layout_toLeftOf="@+id/relativeLayout2"
                            android:layout_toRightOf="@+id/image"
                            android:layout_toStartOf="@+id/relativeLayout2"
                            android:gravity="center"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/voucher_color"
                            android:textSize="@dimen/_15ROR" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/relativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/line_monu"
                            />

                        <TextView
                            android:id="@+id/offer_region"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/voucher_color"
                            android:textSize="@dimen/small" />
                    </RelativeLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/linear0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout"
                    android:layout_marginTop="@dimen/_5ROR"
                    android:gravity="center"

                    android:orientation="horizontal"
                    >

                    <com.facebook.share.widget.LikeView
                        android:id="@+id/likeView"
                        android:layout_width="@dimen/_58ROR"
                        android:background="@color/com_facebook_blue"
                        android:layout_height="@dimen/_25ROR"
                        android:layout_centerInParent="true" />

                    <TextView
                        android:id="@+id/getsu1"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_15ROR"
                        android:gravity="center"
                        android:text="GETS YOU"
                        android:textSize="@dimen/small"
                        android:typeface="sans" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_15ROR"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_5ROR"
                        android:src="@drawable/spinage_logo" />

                    <TextView
                        android:id="@+id/plus"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_15ROR"
                        android:layout_marginLeft="@dimen/_5ROR"
                        android:gravity="center"
                        android:text="+1"
                        android:textSize="@dimen/small"
                        android:typeface="sans" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_15ROR"
                        android:layout_marginLeft="@dimen/_5ROR"
                        android:src="@drawable/spindosmall" />
                </LinearLayout>
              </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layout2cover"
                 android:layout_marginBottom="@dimen/_45ROR"
                    android:layout_below="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/layout2"
                    android:layout_width="match_parent"
                    android:visibility="invisible"
                    android:layout_marginTop="@dimen/_50ROR"
                    android:layout_height="wrap_content"

                    >


                    <Button
                        android:id="@+id/fb_share_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerInParent="true"
                        android:layout_marginBottom="@dimen/_5ROR"
                        android:layout_marginLeft="@dimen/_10ROR"
                        android:layout_marginRight="@dimen/_10ROR"
                        android:background="@drawable/button"
                        android:textSize="@dimen/_16ROR"
                         />




                    <LinearLayout
                        android:id="@+id/linear"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fb_share_button"
                        android:layout_marginTop="@dimen/_10ROR"
                        android:gravity="center"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/getsu"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_15ROR"
                            android:gravity="center"
                            android:text="GETS YOU"
                            android:textSize="@dimen/small"
                            android:typeface="sans" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_15ROR"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5ROR"
                            android:src="@drawable/spinage_logo" />

                        <TextView
                            android:id="@+id/plus1"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_15ROR"
                            android:layout_marginLeft="@dimen/_5ROR"
                            android:gravity="center"
                            android:text="+1"
                            android:textSize="@dimen/small"
                            android:typeface="sans" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_15ROR"
                            android:layout_marginLeft="@dimen/_5ROR"
                            android:src="@drawable/spindosmall" />
                    </LinearLayout>
                </RelativeLayout>
                    <RelativeLayout
                     android:id="@+id/okcover"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/ok"
                            android:layout_width="@dimen/_120ROR"
                            android:layout_height="@dimen/_30ROR"
                            android:visibility="invisible"
                            android:layout_centerHorizontal="true"
                            android:layout_alignParentBottom="true"
                            android:background="@color/button_background"
                            android:typeface="sans"
                            android:text="@string/ok"
                          />
                    </RelativeLayout>
                    </RelativeLayout>


            </RelativeLayout>


        </FrameLayout>


    </LinearLayout>


    <fragment
        android:id="@+id/fragment_navigation_drawer"
        android:name="com.spinages.slider.FragmentDrawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:layout="@layout/fragment_navigation_drawer"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>

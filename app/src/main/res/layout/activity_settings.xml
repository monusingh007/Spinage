                android:layout_width="match_parent"

                android:layout_height="@dimen/_50ROR"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Setting_notification_icon"
                    android:layout_marginLeft="@dimen/_5ROR"
                    android:layout_width="@dimen/_20ROR"
                    android:layout_height="@dimen/_20ROR"
                    android:layout_centerVertical="true"
                    android:src="@drawable/notification_setting" />

                <TextView
                    android:id="@+id/Setting_notification_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:typeface="sans"
                    android:layout_marginLeft="@dimen/_10ROR"
                    android:layout_toRightOf="@id/Setting_notification_icon"
                    android:text="@string/setting_notification_text"
                    android:textColor="@color/black"
                    android:textSize="@dimen/large" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/Setting_term_policies_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50ROR"

                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/Setting_term_policies_icon"
                    android:layout_width="@dimen/_20ROR"
                    android:layout_height="@dimen/_20ROR"

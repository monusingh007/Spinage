<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp"
    tools:ignore="UseCompoundDrawables">
<RelativeLayout
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="@dimen/_150ROR">
    <ImageView
        android:id="@+id/grid_image"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_20ROR"
        android:layout_marginRight="@dimen/_20ROR"
        android:layout_marginTop="@dimen/_10ROR"
        android:layout_marginBottom="@dimen/_40ROR"
        android:layout_height="@dimen/_150ROR"
        android:src="@drawable/mcdonalds_logo"
        android:layout_gravity="center"
        android:scaleType="fitXY"/>
</RelativeLayout>
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_30ROR"
        android:layout_gravity="bottom"
        android:background="@drawable/navigation_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_25ROR"
            android:src="@drawable/icon"
            android:layout_marginLeft="@dimen/_2ROR"
            android:layout_height="@dimen/_25ROR"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/used_on"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_2ROR"
            android:text="used on"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_8ROR" />
        <TextView
            android:id="@+id/date"
            android:layout_marginLeft="@dimen/_2ROR"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_8ROR" />


        <TextView
            android:id="@+id/at"
            android:layout_marginLeft="@dimen/_2ROR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="at"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_8ROR" />
        <TextView
            android:id="@+id/time"
            android:layout_marginLeft="@dimen/_2ROR"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/_8ROR" />




    </LinearLayout>
</FrameLayout>